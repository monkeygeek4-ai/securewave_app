<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="24dp">

    <!-- Аватар звонящего -->
    <ImageView
        android:id="@+id/callerAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/circle_background"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_camera"
        android:tint="#FFFFFF" />

    <!-- Имя звонящего -->
    <TextView
        android:id="@+id/callerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callerAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Unknown Caller"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Тип звонка -->
    <TextView
        android:id="@+id/callType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Incoming call..."
        android:textColor="#AAAAAA"
        android:textSize="16sp" />

    <!-- Контейнер для кнопок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Кнопка отклонить -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/declineButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_button_decline"
                android:drawableTop="@drawable/ic_call_end_white"
                android:padding="0dp"
                android:text=""
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Decline"
                android:textColor="#F44336"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Кнопка принять -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_button_accept"
                android:drawableTop="@drawable/ic_call_white"
                android:padding="0dp"
                android:text=""
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Accept"
                android:textColor="#4CAF50"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>